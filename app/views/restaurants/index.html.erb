<h2>Restaurants</h2>
<ul>
<% @restaurants.each do |restaurant| %>
<li><%= link_to restaurant.name, restaurant_path(restaurant) %></li>
<%= restaurant.address %>
<%= restaurant.category %>
<%= restaurant.phone_number %>
<%= link_to 'Delete restaurant', restaurant_path(restaurant), method: :delete, data: { confirm: 'Are you sure?' }%>
<%= link_to 'Add a review', new_restaurant_review_path(restaurant)%>
<% end %>
</ul>
<%= link_to 'Add a new restaurant', new_restaurant_path %>
